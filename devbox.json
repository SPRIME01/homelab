{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "git",
    "curl",
    "just",
    "jq",
    "postgresql",
    "nodejs_22",
    "python313",
    "docker",
    "pulumi"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "echo 'Infrastructure tools available: pulumi, ansible-core, molecule' > /dev/null"
    ],
    "scripts": {
      "test": [
        "just ci-validate"
      ],
      "test:pulumi": [
        "bash tests/06_pulumi_project_validation.sh"
      ],
      "test:ansible": [
        "bash tests/07_ansible_molecule_validation.sh"
      ],
      "test:infra": [
        "bash tests/08_infra_guards.sh",
        "bash tests/09_tailscale_ssh_verification.sh"
      ]
    }
  }
}
