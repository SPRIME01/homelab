{
  "name": "{{ npm_scope if npm_scope else '' }}homelab",
  "version": "0.1.0",
  "description": "{{ project_description }}",
  "private": true,
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all"
  },
  "engines": {
    "bun": ">={{ bun_version }}"
  },
  "packageManager": "bun@{{ bun_version }}",
  "workspaces": [
    "packages/*",
    "infra/*"
  ],
  "devDependencies": {
{% if enable_nx_distributed %}
    "nx": "{{ nx_version }}",
    "@nx/js": "{{ nx_version }}",
    "@nx/node": "{{ nx_version }}",
    "@nx/workspace": "{{ nx_version }}",
{% endif %}
{% if enable_pulumi %}
    "@nx-extend/pulumi": "^11.0.2",
{% endif %}
    "typescript": "^5.7.0",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "vite": "^6.0.7"
  }
}
