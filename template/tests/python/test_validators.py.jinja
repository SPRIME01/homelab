from extensions.validators import ValidationFilters


def test_is_semver_true():
    v = '1.2.3'
    f = ValidationFilters()
    assert f.is_semver(v)


def test_is_semver_false():
    f = ValidationFilters()
    assert not f.is_semver('1.2')


def test_is_npm_scope_true():
    f = ValidationFilters()
    assert f.is_npm_scope('@my-scope')


def test_is_npm_scope_empty():
    f = ValidationFilters()
    assert f.is_npm_scope('')


def test_is_valid_email_true():
    f = ValidationFilters()
    assert f.is_valid_email('me@example.com')


def test_is_valid_email_false():
    f = ValidationFilters()
    assert not f.is_valid_email('not-an-email')
