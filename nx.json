{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "homelab",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "@nx/workspace:run-commands": {
      "parallel": false
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test"
        ],
        "useDaemonProcess": false
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "defaultProject": "env-check"
}
