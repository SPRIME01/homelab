# Example Ansible environment variables
# Copy to infra/ansible.env and encrypt with SOPS to create infra/ansible.env.sops

# Ansible vault password (for encrypting sensitive playbook data)
ANSIBLE_VAULT_PASSWORD=...

# AWS credentials (if using AWS dynamic inventory or modules)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1

# SSH key passphrase (if using encrypted SSH keys)
SSH_KEY_PASSPHRASE=...

# API tokens for cloud providers (if needed)
DIGITALOCEAN_TOKEN=...
LINODE_TOKEN=...
HETZNER_TOKEN=...

# Ansible configuration overrides
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_PIPELINING=True
